# IREPS Scraper Configuration
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env

# ── IREPS Login ──────────────────────────────
IREPS_MOBILE=9876543210

# ── 2captcha API ─────────────────────────────
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# ── Flask OTP Webhook ────────────────────────
FLASK_PORT=5050
FLASK_SECRET=generate_a_random_secret

# ── Paths (defaults shown — usually no change needed) ──
SESSION_FILE=session/ireps_session.json
DATA_DIR=data/
LOG_FILE=logs/scraper.log

# ── Browser ──────────────────────────────────
# true = headless (production), false = visible browser (debugging)
HEADLESS=true

# ── Health Monitoring (optional) ─────────────
# Supports Slack, Discord, or any URL accepting JSON POST
# Leave empty to disable
HEALTH_WEBHOOK_URL=
